<%- include('partials/header.ejs') %>

<% if (locals.allPosts.length > 0) { %>

<div class="all-posts container list-group d-flex flex-column align-items-center">
    <% allPosts.forEach((post) => { %>
            <a class="list-group-item list-group-item-action m-0 px-3" href="/view/<%= allPosts.indexOf(post) %>">
                <h6 class="mt-3 mb-1 p-0">sept 4</h6>
                <h4 name="postTitle" class="mb-1"><%= post.title %></h4>
                <p name="postContent" class="m-0"><%- (post.content.slice(0, 200)).replace(/(<br>)/gm, " ") %>...</p>
                <p class="text-end m-0 pt-2" style="font-size: x-small"><em>view post -></em></p>
            </a>
            
    <% }); %>

    <% } else { %>
    <p>no posts. start writing now!</p>
</div>

    

<% } %> <%- include('partials/footer.ejs') %>
