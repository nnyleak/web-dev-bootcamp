<%- include('partials/header.ejs') %>

<h1>home page!</h1>

<% if (locals.allPosts.length > 0) { %>
    <% allPosts.forEach(post => { %>
        <div class="post">
            <a href="/edit">
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
            </a>
        </div>
    <% }); %>

    <% } else { %>
    <p>no posts. start writing now!</p>

<% } %> <%- include('partials/footer.ejs') %>
