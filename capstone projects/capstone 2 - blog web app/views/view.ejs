<%- include('partials/header.ejs') %>

<div class="view-content container d-flex flex-column align-items-left">
  <h6><%- postDate %></h6>
  <h3 class="text-wrap text-break"><%- postTitle %></h3>
  <p class="mt-3 text-wrap text-break"><%- postContent %></p>

  <div class="d-flex flex-column align-items-end">
    <form action="/edit/<%= postId %>" method="get">
      <input class="btn-edit" type="submit" value="edit" />
    </form>

    <form action="/delete" method="post">
      <input class="btn-delete" type="submit" value="delete" />
    </form>
  </div>
</div>

<%- include('partials/footer.ejs') %>
