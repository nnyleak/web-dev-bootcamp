<script>
  const transitionDuration = 400; // ms, match your CSS

  function fadeIn() {
    // reset opacity state before animating
    document.body.classList.remove("loaded");
    requestAnimationFrame(() => {
      document.body.classList.add("loaded");
    });
  }

  function fadeOutAndNavigate(href) {
    document.body.classList.remove("loaded");
    setTimeout(() => {
      window.location.href = href;
    }, transitionDuration);
  }

  // On first load
  document.addEventListener("DOMContentLoaded", fadeIn);

  // On back/forward navigation (from bfcache too)
  window.addEventListener("pageshow", fadeIn);

  // Handle all internal links
  document.addEventListener("click", (e) => {
    const link = e.target.closest("a");
    if (
      link &&
      link.hostname === window.location.hostname &&
      link.getAttribute("href") &&
      !link.getAttribute("href").startsWith("#")
    ) {
      e.preventDefault();
      fadeOutAndNavigate(link.href);
    }
  });
</script>

